{
    "include":  [
                    "src/**/*.ts"
                ],
    "exclude":  [
                    "dist",
                    "node_modules"
                ],
    "compilerOptions":  {
                            "target":  "ES2022",
                            "module":  "CommonJS",
                            "moduleResolution":  "Node",
                            "rootDir":  "src",
                            "outDir":  "dist",
                            "strict":  true,
                            "noImplicitAny":  true,
                            "noUncheckedIndexedAccess":  true,
                            "forceConsistentCasingInFileNames":  true,
                            "skipLibCheck":  true,
                            "types":  [
                                          "node"
                                      ]
                        }
}